rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isDocOwner(userId) {
      return isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for social features)
      allow read: if true;
      
      // Users can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile OR
      // Allow account linking updates (with restrictions)
      allow update: if isOwner(userId) || (
        isAuthenticated() &&
        // Only allow updating the settings field
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['settings']) &&
        // Within settings, only allow updating multiAccountIds
        request.resource.data.settings.diff(resource.data.settings).affectedKeys().hasOnly(['multiAccountIds']) &&
        // The update must add the authenticated user to the multiAccountIds array
        // This prevents arbitrary account linking - you can only link accounts you can authenticate as
        (request.auth.uid in request.resource.data.settings.multiAccountIds)
      );
      
      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Posts collection
    match /posts/{postId} {
      // Anyone can read posts
      allow read: if true;
      
      // Authenticated users can create posts
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.authorId;
      
      // Post authors can update their own posts
      allow update: if isAuthenticated() && request.auth.uid == resource.data.authorId;
      
      // Post authors can delete their own posts
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.authorId;
    }
    
    // Comments collection
    match /comments/{commentId} {
      // Anyone can read comments
      allow read: if true;
      
      // Authenticated users can create comments
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.authorId;
      
      // Comment authors can update their own comments
      allow update: if isAuthenticated() && request.auth.uid == resource.data.authorId;
      
      // Comment authors can delete their own comments
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.authorId;
    }
    
    // Tribes collection
    match /tribes/{tribeId} {
      // Anyone can read public tribes
      allow read: if true;
      
      // Authenticated users can create tribes
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.founderId;
      
      // Tribe founders and members can update
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.founderId ||
        request.auth.uid in resource.data.members
      );
      
      // Only founders can delete tribes
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.founderId;
    }
    
    // Moods collection
    match /moods/{moodId} {
      // Users can read their own moods and public moods
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        resource.data.isPublic == true
      );
      
      // Allow reading all moods for global statistics (filtered by date)
      allow list: if isAuthenticated();
      
      // Users can create their own mood entries
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      
      // Users can update their own mood entries
      allow update: if isDocOwner(resource.data.userId);
      
      // Users can delete their own mood entries
      allow delete: if isDocOwner(resource.data.userId);
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Users can read messages where they are sender or receiver
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid == resource.data.receiverId
      );
      
      // Users can create messages where they are the sender
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.senderId;
      
      // Users can update messages where they are sender or receiver (for marking as read)
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid == resource.data.receiverId
      );
      
      // Users can delete their sent messages
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.senderId;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && request.auth.uid == resource.data.userId;
      
      // System can create notifications
      allow create: if isAuthenticated();
      
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      
      // Users can delete their own notifications
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
  }
}
